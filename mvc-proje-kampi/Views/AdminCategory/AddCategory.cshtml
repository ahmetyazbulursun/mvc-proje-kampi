@model EntityLayer.Concrete.Category

@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12 mt-3">
        <div class="card">
            <div class="card-header">
                <div class="d-block">
                    <h3 class="m-2 text-center font-weight-bold">Kategori Ekle</h3>
                </div>
            </div>
            <div class="jumbotron bg-transparent">
                @using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
                {
                    <div class="row mb-3">
                        @Html.Label("Kategori Adı", new { @class = "form-label" })
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Kategori adı.." })
                        @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="row mb-3">
                        @Html.Label("Açıklama", new { @class = "form-label" })
                        @Html.TextBoxFor(x => x.Description, new { @class = "form-control", @placeholder = "Açıklama.." })
                        @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
                    </div>
                    <div class="row mb-3">
                        <button type="submit" class="btn btn-info btn-block"><i class="fa fa-plus"></i></button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>